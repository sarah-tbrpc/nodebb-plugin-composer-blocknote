{
  "id": "nodebb-plugin-composer-blocknote",
  "name": "BlockNote Composer",
  "description": "A modern block-based composer for NodeBB using BlockNoteJS.",
  "version": "0.1.0",
  "type": "module",
  "main": "library.js",
  "scripts": {
    "lint": "eslint .",
    "build": "esbuild static/composer.js --bundle --outfile=static/dist/composer.bundle.js --loader:.js=jsx --loader:.woff=file --loader:.woff2=file"
  },
  "keywords": [
    "nodebb",
    "plugin",
    "composer",
    "blocknote"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sarah-tbrpc/nodebb-plugin-composer-blocknote"
  },
  "license": "MIT",
  "readme": "README.md",
  "bugs": {
    "url": "https://github.com/sarah-tbrpc/nodebb-plugin-composer-blocknote/issues"
  },
  "nbbpm": {
    "compatibility": "^3.2.0"
  },
  "hooks": [
    { "hook": "static:app.load", "method": "initClient" },
    { "hook": "filter:parse.post", "method": "parseBlocknoteContent" },
    { "hook": "filter:composer.formatting", "method": "getFormattingOptions" }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-angular": "19.8.1",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "9.32.0",
    "eslint-config-nodebb": "1.1.10",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "esbuild": "^0.19.0"
  },
  "dependencies": {
    "@blocknote/core": "^0.35.0",
    "@blocknote/mantine": "^0.35.0",
    "@blocknote/react": "^0.35.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
